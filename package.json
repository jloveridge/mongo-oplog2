{
  "name": "mongo-oplog2",
  "version": "2.0.1",
  "description": "Simple monitoring of MongoDB oplog.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "clean": "rm -rf lib node_modules",
    "build": "npm run clean && npm install && npm test && tsc -p .",
    "lint": "tslint --project tsconfig.json",
    "preversion": "npm run build",
    "test": "mocha",
    "test-ci": "NODE_ENV=test mocha --reporter xunit --reporter-options output=testresults.xml"
  },
  "keywords": [
    "data",
    "mongo",
    "mongodb",
    "watcher",
    "live",
    "oplog",
    "cursor"
  ],
  "author": "jloveridge",
  "license": "MIT",
  "dependencies": {
    "@types/commander": "~2.12.2",
    "@types/mongodb": "~3.3.14",
    "commander": "~4.1.0",
    "eventemitter3": "~4.0.0",
    "mongodb": "~3.5.0",
    "tslib": "~1.10.0"
  },
  "devDependencies": {
    "@types/chai": "~4.2.7",
    "@types/mocha": "~5.2.7",
    "@types/node": "~10.17.13",
    "chai": "~4.2.0",
    "mocha": "~7.0.0",
    "ts-node": "~8.6.2",
    "tslint": "~5.20.1",
    "typescript": "~3.7.4"
  },
  "files": [
    "bin",
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jloveridge/mongo-oplog2"
